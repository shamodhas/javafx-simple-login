<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>


<AnchorPane fx:id="loginPage" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.gdse.simplelogin.controller.LoginFormController">
   <children>
      <TextField fx:id="txtUsername" layoutX="193.0" layoutY="131.0" promptText="username" style="-fx-background-radius: 5;">
         <font>
            <Font name="Calibri" size="18.0" />
         </font>
      </TextField>
      <TextField fx:id="txtPassword" layoutX="193.0" layoutY="184.0" promptText="password" style="-fx-background-radius: 5;">
         <font>
            <Font name="Calibri" size="18.0" />
         </font>
      </TextField>
      <Button layoutX="193.0" layoutY="250.0" mnemonicParsing="false" onAction="#signInOnAction" prefHeight="26.0" prefWidth="214.0" style="-fx-background-color: #7367F0; -fx-background-radius: 15;" text="Sign In" textFill="WHITE">
         <font>
            <Font name="Calibri Bold" size="18.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
